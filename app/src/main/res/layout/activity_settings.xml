<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_16dp"
    android:paddingEnd="12dp"
    android:background="@color/settings_background_color"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="14dp">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/settings_background_color"
            android:src="@drawable/arrowback"
            app:tint="@color/text_day_night_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/text_day_night_color"
            android:paddingStart="24dp"
            style="@style/TitleStyle"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:gravity="end">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Black_theme"
            android:layout_weight="1"
            style="@style/TextOnSettingsActivityStyle"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/switch_day_night_color"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_between_text_in_settings"
        android:gravity="end"
        android:id="@+id/buttonShareApp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/share_app"
            style="@style/TextOnSettingsActivityStyle"/>

        <ImageButton
            style="@style/IconsOnSettingActivityStyle"
            android:id="@+id/buttonShareAppIcon"
            android:src="@drawable/share" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_between_text_in_settings"
        android:gravity="end"
        android:id="@+id/buttonSupport">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/write_to_support"
            style="@style/TextOnSettingsActivityStyle"
             />

        <ImageButton
            style="@style/IconsOnSettingActivityStyle"
            android:src="@drawable/support"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_between_text_in_settings"
        android:gravity="end"
        android:id="@+id/buttonUserAgreement">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/user_agreement"
            style="@style/TextOnSettingsActivityStyle" />

        <ImageButton
            style="@style/IconsOnSettingActivityStyle"
            android:src="@drawable/arrow_forward" />

    </LinearLayout>




</LinearLayout>
