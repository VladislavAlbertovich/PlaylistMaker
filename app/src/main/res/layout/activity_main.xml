<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Base.Theme.PlaylistMarket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_16dp"
    android:paddingEnd="@dimen/padding_16dp"
    android:paddingBottom="28dp"
    android:background="?attr/colorPrimary"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playlist_maker"
        android:paddingTop="14dp"
        style="@style/TitleStyle"

        />


    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:text="@string/search"
        app:icon="@drawable/search"
        style="@style/ButtonOnMainActivityStyle" />

    <Button
        android:id="@+id/buttonLibrary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_between_button"
        android:layout_weight="1"
        android:text="@string/medialibrary"
        app:icon="@drawable/library"
        style="@style/ButtonOnMainActivityStyle"/>

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_between_button"
        android:layout_weight="1"
        android:text="@string/settings"
        app:icon="@drawable/settings"
        style="@style/ButtonOnMainActivityStyle"/>

</LinearLayout>