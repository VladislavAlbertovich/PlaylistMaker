<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonOnMainActivityStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/textInButtonAndInTitleSize</item>
        <item name="cornerRadius">@dimen/corner_radius_button_on_main</item>
        <item name="iconSize">@dimen/iconSize</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconPadding">@dimen/iconPadding</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="TextOnSettingsActivityStyle">
        <item name="android:textSize">@dimen/size_text_in_settings_menu</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="IconsStyle">
        <item name="android:layout_width">@dimen/iconSize</item>
        <item name="android:layout_height">@dimen/iconSize</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="SwitcherStyle">
        <item name="thumbTint">@color/yp_blue</item>
        <item name="trackTint">@color/yp_blue_light</item>
    </style>

    <style name="ArtistNameOnTrackCardTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="UpdateButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="ActivitySearchButtonStyle">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>
</resources>