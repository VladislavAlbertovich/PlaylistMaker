<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonOnMainActivityStyle" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/textInButtonAndInTitleSize</item>
        <item name="cornerRadius">@dimen/corner_radius_button_on_main</item>
        <item name="iconSize">@dimen/iconSize</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconPadding">@dimen/iconPadding</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="TextOnSettingsActivityStyle">
        <item name="android:textSize">@dimen/size_text_in_settings_menu</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="IconsStyle">
        <item name="android:layout_width">@dimen/iconSize</item>
        <item name="android:layout_height">@dimen/iconSize</item>
        <item name="tint">@color/yp_text_gray</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="EditTextOnSearchLayoutStyle">
        <item name="android:fontFamily">@font/ys_display_thin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/text_and_icon_on_search_layout_color</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:background">@color/search_background</item>
    </style>

    <style name="SwitcherStyle">
        <item name="android:thumbTint">@color/yp_text_gray</item>
        <item name="android:trackTint">@color/yp_light_gray</item>
    </style>

    <style name="ArtistNameOnTrackCardTextStyle">
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="UpdateButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>